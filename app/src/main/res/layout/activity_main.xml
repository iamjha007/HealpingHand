<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Feild Value"
            android:textAlignment="center"
            android:layout_weight="6"
            android:textColorHint="@color/green"

            />
        <ImageButton
            android:id="@+id/micbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mic_icon"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            />

            </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/emailbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Email"
            android:drawableLeft="@drawable/mail_icon"
            android:backgroundTint="@color/green"/>

        <Button
            android:id="@+id/browsebtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Browser"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/green"/>
        <Button
            android:id="@+id/dialbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Dial"
            android:drawableLeft="@drawable/phone_icon"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/green"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/msgbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Whatsapp msg"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_baseline_message_24"
            android:backgroundTint="@color/green"
            android:layout_marginRight="6dp"/>
    <Button
        android:id="@+id/youtubebtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="YOUTUBE"
        android:layout_weight="1"
        android:backgroundTint="@color/green"
        android:drawableLeft="@drawable/ic_baseline_ondemand_video_24"
        android:layout_marginLeft="6dp"/>
    </LinearLayout>
